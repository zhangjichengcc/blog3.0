{
  "name": "blog3.0",
  "version": "2.0.0",
  "private": true,
  "description": "personal blog by zhangjicheng",
  "scripts": {
    "analyze": "cross-env ANALYZE=1 umi build",
    "build": "umi build",
    "deploy": "cross-env ANT_DESIGN_PRO_ONLY_DO_NOT_USE_IN_YOUR_PRODUCTION=site npm run site && npm run gh-pages",
    "fetch:blocks": "fetch-blocks",
    "format-imports": "import-sort --write '**/*.{js,jsx,ts,tsx}'",
    "gh-pages": "cp CNAME ./dist/ && gh-pages -d dist",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write **/*",
    "start": "cross-env UMI_UI=none umi dev",
    "start:no-mock": "cross-env MOCK=none umi dev",
    "start:test": "cross-env TEST=true umi dev",
    "test": "umi test",
    "test:all": "node ./tests/run-tests.js",
    "test:component": "umi test ./src/components"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": "npm run lint-staged:js",
    "**/*.{js,ts,tsx}": "npm run lint-staged:js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@antv/data-set": "^0.10.2",
    "@antv/g6": "^3.1.9",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@umijs/preset-react": "^1",
    "antd": "^4.8.0",
    "bizcharts": "^3.5.4",
    "bizcharts-plugin-slider": "^2.1.1-beta.1",
    "classnames": "^2.2.6",
    "echarts": "^4.9.0",
    "echarts-gl": "^1.1.1",
    "highlight.js": "^9.15.10",
    "js-moment": "^2.1.5",
    "lodash": "^4.17.11",
    "lodash-decorators": "^6.0.1",
    "moment": "^2.24.0",
    "numeral": "^2.0.6",
    "particles.js": "^2.0.0",
    "path-to-regexp": "^3.0.0",
    "qs": "^6.7.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-fittext": "^1.0.0",
    "react-markdown": "^5.0.2",
    "react-simplemde-editor": "^4.0.3",
    "react-syntax-highlighter": "^15.3.0",
    "sha2": "^1.0.2",
    "typescript": "^4.0.5",
    "umi": "^3.2.26"
  },
  "devDependencies": {
    "@ant-design/colors": "^3.1.0",
    "@types/classnames": "^2.2.7",
    "@types/echarts": "^4.6.5",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@umijs/fabric": "^1.0.4",
    "check-prettier": "^1.0.3",
    "cross-env": "^5.2.0",
    "cross-port-killer": "^1.1.1",
    "eslint": "^7.12.1",
    "eslint-plugin-react": "^7.21.5",
    "fetch-blocks": "^1.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.3.0",
    "import-sort-cli": "^6.0.0",
    "jest-puppeteer": "^4.2.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^8.1.7",
    "pinyin": "^2.9.0",
    "prettier": "^1.17.1",
    "slash2": "^2.0.0",
    "stylelint": "^10.1.0",
    "webpack-theme-color-replacer": "^1.2.15"
  },
  "optionalDependencies": {},
  "engines": {
    "node": ">=10.0.0"
  },
  "checkFiles": [
    "src/**/*.js*",
    "src/**/*.ts*",
    "src/**/*.less",
    "config/**/*.js*",
    "scripts/**/*.js"
  ]
}
